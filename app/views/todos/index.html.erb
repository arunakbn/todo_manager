<h1>My Todo-list</h1>

<%= form_with(url: "/todos", method: "post") do %>
  <%= text_field_tag :todo_text, "", placeholder: "What's next?" %>
  <%= date_field_tag 'due_date' %>
  <%= button_tag 'Add' %>
<% end %>

<%= render partial: "todo-section", locals: {
  section_title: "Overdue",
  todos: @todos.overdue,
  show_due_date: true
} %>

<%= render partial: "todo-section", locals: {
  section_title: "Due Today",
  todos: @todos.due_today,
  show_due_date: false
} %>

<%= render partial: "todo-section", locals: {
  section_title: "Due Later",
  todos: @todos.due_later,
  show_due_date: true
} %>
